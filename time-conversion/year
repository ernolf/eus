#!/bin/bash

LC_TIME=de_DE.UTF-8
current_date=$(date +%Y-%m-%d)
current_day=$(date +%e)
current_month=$(date +%B | tr '[:upper:]' '[:lower:]')
current_year=$(date +%Y)

highlight_color='\033[0;32m'
past_color='\033[0;37m'
default_color='\033[0m'

ncal_output=$(ncal $current_year)

echo "$ncal_output"

exit 0
